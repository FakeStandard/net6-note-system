@using net6_note_system.ViewModels
@model NoteViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create Course</h1>
<hr />

<div class="container pt-3">
    <form asp-action="Add">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row form-group">
            <div class="col-3">
                <label asp-for="Title" class="control-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group pt-1">
            <div class="col-3">
                <label asp-for="Content" class="control-label"></label>
            </div>
            <div class="col-5">
                <textarea asp-for="Content" data-provide="markdown" rows="10" cols="50" class="form-control"></textarea>
                @*<span asp-validation-for="Content" class="text-danger"></span>*@
            </div>
        </div>

        <div class="form-group pt-5">
            <div class="row d-flex flex-row-reverse">
                <div class="col-auto">
                    <a asp-action="Index" class="btn btn-outline-dark">Back to List</a>
                </div>
                <div class="col-auto">
                    <input type="submit" value="Add" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
